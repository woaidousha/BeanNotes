<resources>

    <style name="BaseTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/BaseTheme.BaseActionBar</item>
        <item name="android:actionBarStyle">@style/BaseTheme.BaseActionBar</item>
    </style>

    <style name="BaseTheme.BaseActionBar" parent="Widget.Sherlock.ActionBar.Solid">
        <item name="android:background">@drawable/home_gradient</item>
        <item name="background">@drawable/home_gradient</item>
        <item name="titleTextStyle">@style/BaseActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/BaseActionBar.TitleTextStyle</item>
    </style>

    <style name="BaseActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/action_bar_title_text</item>
        <item name="android:shadowColor">@color/action_bar_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MainActivityTheme" parent="BaseTheme">
        <item name="actionBarStyle">@style/MainActivityTheme.ActionBar</item>
        <item name="android:actionBarStyle">@style/MainActivityTheme.ActionBar</item>
    </style>

    <style name="MainActivityTheme.ActionBar" parent="BaseTheme.BaseActionBar">
        <item name="titleTextStyle">@style/MainActivityTheme.ActionBar.TitleTextStyle</item>
        <item name="android:titleTextStyle">@style/MainActivityTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MainActivityTheme.ActionBar.TitleTextStyle" parent="TextAppearance.Sherlock.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/action_bar_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_action_bar_title_text</item>
        <item name="android:shadowColor">@color/main_action_bar_title_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="Bottom_Bar_Menu_Item">
        <item name="android:layout_width">@dimen/abs__action_bar_default_height</item>
        <item name="android:layout_height">@dimen/abs__action_bar_default_height</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:background">@drawable/bottombar_button_selector</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="WorkSpace_Item_Text">
        <item name="android:shadowColor">@color/workspace_item_text_shadow</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-3</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CommonButton">
        <item name="android:textSize">@dimen/common_button_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/common_button_text</item>
        <item name="android:background">@drawable/common_button_selector</item>
        <item name="android:maxWidth">@dimen/common_button_maxwidth</item>
        <item name="android:minWidth">@dimen/common_button_minwidth</item>
        <item name="android:minHeight">@dimen/common_button_minheight</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">@color/common_button_text_shadow</item>
        <item name="android:shadowDx">0.0</item>
        <item name="android:shadowDy">-1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>
</resources>
