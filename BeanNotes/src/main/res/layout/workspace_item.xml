<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minHeight="@dimen/workspace_item_height">

    <ImageView
        android:id="@+id/workspace_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/workspace_item_side_padding"
        android:layout_marginRight="@dimen/workspace_item_internal_margin"
        android:src="@drawable/ic_workspace_allnotes"
        android:layout_weight="0"/>

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center_vertical|left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            style="@style/WorkSpace_Item_Text"
            android:id="@+id/workspace_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/workspace_item_name"
            android:textSize="@dimen/workspace_item_name_size"/>

        <TextView
            style="@style/WorkSpace_Item_Text"
            android:id="@+id/workspace_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/workspace_item_description"
            android:textSize="@dimen/workspace_item_description_size"/>
    </LinearLayout>

    <TextView
        style="@style/WorkSpace_Item_Text"
        android:id="@+id/workspace_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/workspace_item_internal_margin"
        android:layout_marginRight="@dimen/workspace_item_side_padding"
        android:textColor="@color/workspace_item_count"
        android:textSize="@dimen/workspace_item_count_size"
        android:layout_weight="0"/>

</LinearLayout>