<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent">

    <RelativeLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/notelist_item_outer_inbetween_padding"
        android:layout_marginBottom="@dimen/notelist_item_outer_inbetween_padding"
        android:layout_marginLeft="@dimen/notelist_item_outer_side_padding"
        android:layout_marginRight="@dimen/notelist_item_outer_side_padding"
        android:minHeight="@dimen/notelist_item_min_height"
        android:background="@color/notelist_background">

        <ImageView
            android:id="@+id/note_thumb"
            android:layout_width="@dimen/notelist_item_min_height"
            android:layout_height="@dimen/notelist_item_min_height"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_workspace_allnotes"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/note_thumb"
            android:layout_marginLeft="@dimen/notelist_item_side_padding"
            android:layout_marginRight="@dimen/notelist_item_side_padding"
            android:layout_marginTop="@dimen/notelist_item_topbottom_padding"
            android:layout_marginBottom="@dimen/notelist_item_topbottom_padding"
            android:orientation="vertical"
            android:gravity="left|center_vertical">
            <TextView
                android:id="@+id/note_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:textSize="@dimen/notelist_item_primary_text_size"
                android:textColor="@color/notelist_item_primary_text"
                android:gravity="center_vertical|left"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/note_description"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/notelist_item_secondary_text_size"
                android:textColor="@color/notelist_item_secondary_text"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/note_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|left"
                android:textSize="@dimen/notelist_item_secondary_text_size"
                android:textColor="@color/notelist_item_secondary_text"
                android:singleLine="true"
                android:layout_weight="1"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/note_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_notelist_star"/>
    </RelativeLayout>
</LinearLayout>
