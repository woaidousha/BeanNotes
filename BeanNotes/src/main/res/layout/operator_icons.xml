<?xml version="1.0" encoding="utf-8"?>
<com.bean.notes.widget.ExpendMenu
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/btn_capture_expend_ring_width"
    android:layout_height="@dimen/btn_capture_expend_ring_width">

    <ImageView
        android:id="@+id/slice_icon_reminder"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_capture_reminder"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/slice_icon_camera"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_capture_camera"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/slice_icon_text"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_capture_text"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/slice_icon_voice"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_capture_mic"
        android:scaleType="centerInside"/>

    <ImageView
        android:id="@+id/slice_icon_checklist"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_capture_checkmark"
        android:scaleType="centerInside"/>
</com.bean.notes.widget.ExpendMenu>